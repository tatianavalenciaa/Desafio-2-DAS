@model CineApp.Models.Pelicula

@{
    ViewBag.Title = "Modificar Pelicula";
}

@using (Html.BeginForm("Modificar", "Peliculas", FormMethod.Post)) {
    @Html.HiddenFor(pelicula => pelicula.IdPelicula)
    <div class="row">
        <div class="col-sm-12 col-md-3 col-lg-3">

        </div>
        <div class="col-sm-12 col-md-3 col-lg-3">
            <img src="@Url.Content(Model.Poster)" class="img-fluid" alt="...">
            @Html.HiddenFor(pelicula => pelicula.Poster)
        </div>
        <div class="col-sm-12 col-md-3 col-lg-3">
            <div class="mb-3">
                <h1>@Html.DisplayFor(pelicula => pelicula.Titulo, (new { @style = "font-weight:bold" }))</h1>
                @Html.HiddenFor(pelicula => pelicula.Titulo)
            </div>
            <div class="mb-3">
                @Html.LabelFor(pelicula => pelicula.Sinopsis, "Sinopsis: ", (new { @style = "font-weight:bold" }))
                @Html.DisplayFor(pelicula => pelicula.Sinopsis, new { @class = "text-justify" })
                @Html.HiddenFor(pelicula => pelicula.Sinopsis)
            </div>
            <div class="mb-3">
                @Html.LabelFor(pelicula => pelicula.Director, "Director: ", (new { @style = "font-weight:bold" }))
                @Html.DisplayFor(pelicula => pelicula.Director)
                @Html.HiddenFor(pelicula => pelicula.Director)
            </div>
            <div class="mb-3">
                @Html.LabelFor(pelicula => pelicula.Genero, "Genero: ", (new { @style = "font-weight:bold" }))
                @Html.DisplayFor(pelicula => pelicula.Genero)
                @Html.HiddenFor(pelicula => pelicula.Genero)
            </div>
            <div class="mb-3">
                ⭐
                @Html.LabelFor(pelicula => pelicula.Ranking, "Ranking: ", (new { @style = "font-weight:bold" }))
                @Html.TextBoxFor(pelicula => pelicula.Ranking, new { @type = "number", @class = "form-control", @min = "0.0", @step = "0.1", @max = "5" })

                @Html.ValidationMessageFor(pelicula => pelicula.Ranking, "", (new { @class = "text-danger" }))
            </div>
            <div class="mb-3 d-grid">
                <input type="submit" class="btn btn-danger" value="Calificar" />
            </div>
            <div class="col-sm-12 col-md-3 col-lg-3">

            </div>
        </div>
    </div>
}
